@model SportCenter.ViewModels.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto my-4">
                <div class="card card-signup z-depth-0">
                    <div class="card-body text-center">
                        <i class="fab fa-4x fa-gripfire text-danger"></i>
                        <h3 class="card-title">Регистрация</h3>
                        <p class="slogan">Становись спортивным, присоединяйся к нам!</p>
                        <span></span>
                        <div class="md-form mat-2">
                            <span asp-validation-for="Email" />
                            <input type="email" id="email" class="form-control" asp-for="Email" />
                            <label for="email" asp-for="Email">Email</label>
                        </div>

                        <div class="md-form mat-2">
                            <span asp-validation-for="FIO" />
                            <input type="text" id="username" class="form-control" asp-for="FIO" />
                            <label for="username" asp-for="FIO">ФИО</label>
                        </div>

                        <div class="md-form mat-2">
                            <span asp-validation-for="Password" />
                            <input type="password" id="password" class="form-control" asp-for="Password" />
                            <label for="password" asp-for="Password">Введите пароль</label>
                        </div>

                        <div class="md-form mat-2">
                            <span asp-validation-for="ConfirmPassword" />
                            <input type="password" id="password2" class="form-control" asp-for="ConfirmPassword" />
                            <label for="password2" asp-for="ConfirmPassword">Повторите пароль</label>
                        </div>

                        <div class="card-foter text-right">
                            <button type="submit" class="btn btn-outline-primary" style="width: 140px;">Регистрация</button>
                        </div>
                        <hr>
                        <span>Уже зарегистрированы?</span>
                        <a class="text-center" asp-action="Login" asp-controller="Account">Авторизация</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


