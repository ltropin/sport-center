@model SportCenter.ViewModels.LoginModel

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="container">
            <div class="row">
                <div class="col-md-5 mx-auto my-4">
                    <div class="card card-signup z-depth-0">
                        <div class="card-body text-center">
                            <i class="fab fa-4x fa-gripfire text-danger"></i>
                            <h3 class="card-title">Авторизация</h3>
                            <p class="slogan">С возвращением!</p>

                            <div class="md-form mat-2">
                                <span asp-validation-for="Email" />
                                <input type="text" class="form-control" asp-for="Email" id="email" />
                                <label for="email">E-mail</label>
                            </div>

                            <div class="md-form mat-2">
                                <span asp-validation-for="Password" />
                                <input asp-for="Password" type="password" id="password" class="form-control" />
                                <label for="password">Пароль</label>
                            </div>

                            <div class="card-foter text-right">
                                <input type="submit" value="Войти" class="btn btn-outline-primary" style="width: 140px;" />
                            </div>

                            <hr>
                            <span>Нет аккаунта?</span>
                            <a class="text-center" asp-action="Register" asp-controller="Account">Регистрация</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@{
   
}
