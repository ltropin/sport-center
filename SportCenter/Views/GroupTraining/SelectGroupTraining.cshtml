@using SportCenter.ViewModels
@{
    ViewData["Title"] = "Групповые тренировки";
    var groupTrainings = ViewData["GroupTrainings"] as IEnumerable<IEnumerable<GroupTrainingModel>>;
    var trainers = ViewData["Trainers"] as IEnumerable<SelectListItem>;
    var dayofweeks = ViewData["DayOfWeeks"] as IEnumerable<SelectListItem>;
}

@using (Html.BeginForm(actionName: "SelectGroupTraining", controllerName: "GroupTraining"))
{
    @Html.AntiForgeryToken()
    <div class="card container col-lg-6 col-md-12 col-sm-12 mt-2 px-0">
        <div class="container-fluid px-0 text-center grey lighten-4">
            <h2 class="text-center text-default mt-2">Групповые тренировки</h2>
        </div>
        <hr class="mt-0" />
        <div class="card-body row py-0 justify-content-center">
            <div class="col-xl-9">
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        @Html.Label("STrainer", "Выбор тренера", htmlAttributes: new { @class = "mdb-main-label mb-0 text-default" })
                        @Html.DropDownList("STrainer", trainers, htmlAttributes: new { @class = "mdb-select md-form colorful-select dropdown-default mt-0" })
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        @Html.Label("SDayOfWeek", "Выбор дня недели", htmlAttributes: new { @class = "mdb-main-label mb-0 text-default" })
                        @Html.DropDownList("SDayOfWeek", dayofweeks, htmlAttributes: new { @class = "mdb-select md-form colorful-select dropdown-default mt-0 mb-0" })
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-0" />
        <div class="container-fluid px-0 text-center grey lighten-4">
            <input type="submit" class="btn btn-success" value="Найти тренировки" />
        </div>
    </div>
}
@using (Html.BeginForm(actionName: "AddGroupTraining",
                     controllerName: "GroupTraining",
                     method: FormMethod.Post,
                     htmlAttributes: new { @class = "" }))
{
    <div class="card mt-3 px-0">
        <div class="container px-0 text-center grey lighten-4">
            <h2 class="text-center text-default mt-2">Свободные записи</h2>
        </div>
        <hr class="mt-0" />
        @foreach (var group in groupTrainings)
        {
            <div class="card-body row pt-0">
                @foreach (var gt in group)
                {
                    <div class="col-lg-3 col-md-3 col-sm-12 mb-2">
                        <div class="card">
                            <div class="card-header">
                                @gt.Name
                            </div>
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-primary">@gt.DayOfWeek, @gt.Time</h6>
                                <p class="card-text text-primary">
                                    @gt.Capacity мест осталось
                                </p>

                            </div>
                            @if (!gt.Recorded)
                            {
                                <div class="card-footer">
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="AddGT_@gt.ID" name="gtSelected" value="@gt.ID" />
                                        @Html.Label($"AddGT_{gt.ID}", "Записаться", htmlAttributes: new { @class = "custom-control-label text-success" })
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="card-footer">
                                    @Html.ActionLink("Отменить запись", "Cancel", new { IDGt = gt.ID }, htmlAttributes: new { @class = "text-danger" })
                                </div>
                            }
                        </div>
                    </div>
                }


            </div>
        }
        <hr class="my-0" />
        <div class="container-fluid px-0 text-center grey lighten-4">
            <input type="submit" class="btn btn-success" value="Записаться на выбранные" />
        </div>
    </div>

}
