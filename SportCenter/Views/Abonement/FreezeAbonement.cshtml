
@{
    ViewData["Title"] = "Заморозка абонемента";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var abonement = ViewData["Abonement"] as Abonement;
}

    <h1>Заморозка абонемента</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="FreezeAbonement">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@abonement.Number" />
            <div class="form-group">
                <label asp-for="@abonement.DateBlock" class="control-label"></label>
                <input asp-for="@abonement.DateBlock" class="form-control" required />
                <span asp-validation-for="@abonement.DateBlock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@abonement.IntervalBlock" class="control-label"></label>
                <input asp-for="@abonement.IntervalBlock" class="form-control" min="1" max="@abonement.Capacity" />
                <span asp-validation-for="@abonement.IntervalBlock" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Заморозить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
